<h1>Venues</h1>

@foreach (var venue in @Model)
{
  <li><a href="/venue/@venue.GetId()">@venue.GetName()</a> |
  <form action="/venue/delete" method = "post">
    <input hidden name "venue-id" value='@venue.GetId()'>
    <button type="submit">Delete</button>
  </form></li>
}
<Form action = "add-venue" method = "post">
  <label for="venue-name">Venue Name</label>
  <input type="text" name="venue-name">
  <button type="submit" name="name">add</button>
</form>
