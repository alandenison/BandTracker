<h1>Bands</h1>
@foreach (var band in @Model)
{
<form action = "/band-delete" method="post">
  <li><a href="/band/@band.GetId()">@band.GetName()</a><input hidden name="band-id" value=@band.GetId()>
  <button type="submit" name="button">delete</button></li>
</form>
}

<Form action = "add-band" method = "post">
  <label for="band-name">Band Name</label>
  <input type="text" name="band-name">
  <button type="submit" name="name">add</button>
</form>
<a href="/">home</a>
<form action="/delete-all-bands" method="post">
  <button type="submit">Delete All</button>
</form>
